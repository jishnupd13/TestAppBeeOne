<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.TestApp.Starting" parent="Theme.SplashScreen">
    <!-- Set the splash screen background, animated icon, and animation duration. -->
    <item name="windowSplashScreenBackground">@color/white</item>

    <!-- Use windowSplashScreenAnimatedIcon to add either a drawable or an animated drawable.
    One of these is required.-->
    <item name="windowSplashScreenAnimatedIcon">@drawable/splash_screen_inset</item>
    <item name="windowSplashScreenAnimationDuration">1000</item>

    <!-- Set the theme of the Activity that directly follows your splash screen.-->
    <item name="postSplashScreenTheme">@style/Theme.ArchitecturePattern</item>
</style>

</resources>